{
  "openapi": "3.0.3",
  "info": {
    "title": "KAMIPA - REST API",
    "description": "This is a REST API for KAMIPA (Keluarga Madrasah Ibtidaiyah Pancasila)",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:9000" }],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Auth API"],
        "description": "Registrasi akun baru",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "student_nisn": {
                    "type": "string",
                    "description": "Student nisn",
                    "example": "1234567890"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password must be at least 8 characters long",
                    "minLength": 8
                  }
                },
                "required": ["email", "student_nisn", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success register new user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "User registered successfully"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/auth/login": {
      "post": {
        "tags": ["Auth API"],
        "description": "Melakukan proses autentikasi dan otorisasi",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "student_nisn": {
                    "type": "string",
                    "description": "Student nisn",
                    "example": "1234567890"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password must be at least 8 characters long",
                    "minLength": 8
                  }
                },
                "required": ["email", "student_nisn", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success register new user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "User login successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "access_token": { "type": "string" },
                        "refresh_token": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/auth/refresh": {
      "post": {
        "tags": ["Auth API"],
        "description": "Memperbarui access token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refresh_token": {
                    "type": "string",
                    "description": "refresh token yang didapatkan dari proses login"
                  }
                },
                "required": ["email", "student_nik", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success refresh access token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Refresh access token successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "access_token": { "type": "string" },
                        "refresh_token": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/auth/logout": {
      "delete": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Auth API"],
        "description": "Menghapus otorisasi pengguna",
        "responses": {
          "200": {
            "description": "Success logout user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Logout user successfully"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/news": {
      "get": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Dashboard API"],
        "description": "Get list berita / pengumuman",
        "responses": {
          "200": {
            "description": "Success get list news data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "id-1"
                          },
                          "title": {
                            "type": "string",
                            "example": "judul pengumuman 1"
                          },
                          "description": {
                            "type": "string",
                            "example": "deskripsi berita atau pengumuman 1"
                          },
                          "date": {
                            "type": "string",
                            "example": "17-08-2025"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/achievements": {
      "get": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Dashboard API"],
        "description": "Get list prestasi siswa / sekolah",
        "responses": {
          "200": {
            "description": "Success get list of achievement data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "id-1"
                          },
                          "title": {
                            "type": "string",
                            "example": "judul pengharagaan 1"
                          },
                          "description": {
                            "type": "string",
                            "example": "deskripsi berita atau pengharagaan 1"
                          },
                          "date": {
                            "type": "string",
                            "example": "17-08-2025"
                          },
                          "image": {
                            "type": "string",
                            "example": "https://image.com"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/posts/{postId}": {
      "get": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Dashboard API"],
        "description": "Melihat detail penghargaan siswa / sekolah",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "achievement or news Id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get detail data achievement",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "id-1"
                        },
                        "title": {
                          "type": "string",
                          "example": "title-1"
                        },
                        "description": {
                          "type": "string",
                          "example": "description-1"
                        },
                        "date": {
                          "type": "string",
                          "example": "17-08-2025"
                        },
                        "image": {
                          "type": "string",
                          "example": "https://image.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/attendances": {
      "get": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Attendance API"],
        "description": "Get list kehadiran siswa",
        "responses": {
          "200": {
            "description": "Success get list of attendance data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "id-1"
                          },
                          "date": {
                            "type": "string",
                            "example": "20-08-2026"
                          },

                          "status": {
                            "type": "string",
                            "example": "hadir"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/attendances/summary": {
      "get": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Attendance API"],
        "description": "Get summary of attendace student",
        "responses": {
          "200": {
            "description": "Success get summary of attendance student",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "activity": {
                            "type": "string",
                            "example": "Kegiatan Belajar Mengajar"
                          },
                          "start_date": {
                            "type": "string",
                            "example": "01-01-2025"
                          },
                          "current_date": {
                            "type": "string",
                            "example": "20-09-2028"
                          },
                          "hadir": {
                            "type": "number",
                            "example": 20
                          },
                          "izin": {
                            "type": "number",
                            "example": 0
                          },
                          "sakit": {
                            "type": "number",
                            "example": 0
                          },
                          "alpha": {
                            "type": "number",
                            "example": 0
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/fees": {
      "get": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Payment API"],
        "description": "Get summary of attendace student",
        "responses": {
          "200": {
            "description": "Success get summary of attendance student",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "id-fee-1"
                          },
                          "name": {
                            "type": "string",
                            "example": "pembayaran buku"
                          },
                          "status": {
                            "type": "string",
                            "example": "paid"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/api/fees/{feeId}": {
      "get": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Payment API"],
        "description": "Get summary of attendace student",
        "parameters": [
          {
            "name": "feeId",
            "in": "path",
            "description": "fee id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get summary of attendance student",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Get data successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "id-fee-1"
                        },
                        "name": {
                          "type": "string",
                          "example": "pembayaran buku"
                        },
                        "amount": {
                          "type": "number",
                          "example": 500000
                        },
                        "remaining_amount": {
                          "type": "number",
                          "example": 0
                        },
                        "due_date": {
                          "type": "string",
                          "example": "31-12-2025"
                        },
                        "status": {
                          "type": "string",
                          "example": "paid"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/fees/{feeId}/pay": {
      "post": {
        "security": [{ "JwtAuth": [] }],
        "tags": ["Midtrans API"],
        "description": "Create a Midtrans payment transaction for the selected fee",
        "parameters": [
          {
            "name": "feeId",
            "in": "path",
            "description": "Fee ID to be paid",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "item_name": {
                    "type": "string",
                    "example": "pembayaran buku semester 1"
                  },
                  "amount": {
                    "type": "number",
                    "example": 500000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success create midtrans transaction",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success", "error"],
                      "default": "success"
                    },
                    "message": {
                      "type": "string",
                      "default": "Payment transaction created successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "order_id": {
                          "type": "string",
                          "example": "MID-User-123-id-fee-1"
                        },
                        "token": {
                          "type": "string",
                          "example": "snap-token-xxx"
                        },
                        "redirect_url": {
                          "type": "string",
                          "example": "https://app.sandbox.midtrans.com/snap/v3/xxx"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/payments/midtrans/notification": {
      "post": {
        "tags": ["Midtrans API"],
        "description": "Callback notification from Midtrans to update payment status",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "transaction_time": { "type": "string" },
                  "transaction_status": { "type": "string" },
                  "transaction_id": { "type": "string" },
                  "status_message": { "type": "string" },
                  "status_code": { "type": "string" },
                  "signature_key": { "type": "string" },
                  "payment_type": { "type": "string" },
                  "order_id": { "type": "string" },
                  "merchant_id": { "type": "string" },
                  "gross_amount": { "type": "string" },
                  "fraud_status": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Callback received successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "JwtAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Enter the token with the `Bearer ` prefix, e.g. Bearer abcde12345"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "error" },
          "message": { "type": "string", "example": "error.message" }
        }
      }
    }
  }
}
